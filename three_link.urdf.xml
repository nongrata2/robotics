<robot name="three_link">

    <material name="black"><color rgba="0 0 0 1"/></material>
    <material name="white"><color rgba="1 1 1 1"/></material>
    <material name="gray"><color rgba="0.4 0.4 0.4 1"/></material>

    <link name="world"/>

    <link name="base">
        <visual>
            <geometry><sphere radius="0.1"/></geometry>
            <material name="white"/>
        </visual>
        <inertial>
		<mass value="0"/>
  		<inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                     iyy="0.0001" iyz="0.0" izz="0.0001"/>
	</inertial>
    </link>

    <link name="link_1">
        <visual>
            <geometry><cylinder radius="0.01" length="0.5"/></geometry>
            <origin xyz="0 0 0.25" rpy="0 0 0"/>
            <material name="gray"/>
        </visual>
        <inertial>
		<mass value="1"/>
		<inertia ixx="0.001" ixy="0.0" ixz="0.0"
                     iyy="0.001" iyz="0.0" izz="0.001"/>
	</inertial>
    </link>

    <link name="link_eef1">
        <visual>
            <geometry><sphere radius="0.05"/></geometry>
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
            <material name="black"/>
        </visual>
        <inertial>
		<mass value="1"/>
		<inertia ixx="0.0005" ixy="0.0" ixz="0.0"
                     iyy="0.0005" iyz="0.0" izz="0.0005"/>
	</inertial>
    </link>

    <link name="link_2">
        <visual>
            <geometry><cylinder radius="0.01" length="0.5"/></geometry>
            <origin xyz="0 0 0.25" rpy="0 0 0"/>
            <material name="gray"/>
        </visual>
        <inertial>
		<mass value="1"/>
		<inertia ixx="0.001" ixy="0.0" ixz="0.0"
                     iyy="0.001" iyz="0.0" izz="0.001"/>
	</inertial>
    </link>

    <link name="link_eef2">
        <visual>
            <geometry><sphere radius="0.05"/></geometry>
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
            <material name="black"/>
        </visual>
        <inertial>
		<mass value="1"/>
            	<inertia ixx="0.0005" ixy="0.0" ixz="0.0"
                     iyy="0.0005" iyz="0.0" izz="0.0005"/>
	</inertial>
    </link>

    <joint name="joint_0" type="revolute">
        <parent link="world"/>
        <child link="base"/>
        <origin xyz="0 0 1.5" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.1415" upper="3.1415" effort="1000" velocity="5"/>
        <dynamics damping="0.01" friction="0"/>
    </joint>

    <joint name="joint_1" type="revolute">
        <parent link="base"/>
        <child link="link_1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-3.1415" upper="3.1415" effort="1000" velocity="5"/>
        <dynamics damping="0.5" friction="0"/>
    </joint>

    <joint name="joint_eef1" type="fixed">
        <parent link="link_1"/>
        <child link="link_eef1"/>
        <origin xyz="0 0 0.5" rpy="0 0 0"/>
    </joint>

    <joint name="joint_2" type="revolute">
        <parent link="link_eef1"/>
        <child link="link_2"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-3.1415" upper="3.1415" effort="1000" velocity="5"/>
        <dynamics damping="0.5" friction="0"/>
    </joint>

    <joint name="joint_eef2" type="fixed">
        <parent link="link_2"/>
        <child link="link_eef2"/>
        <origin xyz="0 0 0.5" rpy="0 0 0"/>
    </joint>
</robot>